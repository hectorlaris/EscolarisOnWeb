<!DOCTYPE html>
<html lang="eng">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Escolaris 5.0 Universitary System</title>
	<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Escolaris</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                          @*  <a class="nav-link text-dark" href ="/home/index">Home</a> *@
                            <a class="nav-link text-dark" asp-controller="home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="categories" asp-action="Index">Categorias</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="acadPrograms" asp-action="Index">Programs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="enrollment" asp-action="index">Enrollment</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="transactions" asp-action="Index">Registers</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
	    <div class="pb-3">
            @RenderSection("title", false)
        </div>
        <div>
            @RenderBody()
        </div>
	</div>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"
        integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g="
        crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required:false)

</body>
</html>